@model Exam.Models.Employee

<h2>Create Employee</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EmployeeName"></label>
        <input asp-for="EmployeeName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmployeeCode"></label>
        <input asp-for="EmployeeCode" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rank"></label>
        <input asp-for="Rank" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.Departments, "DepartmentId", "DepartmentName"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
